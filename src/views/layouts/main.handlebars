<script>
// Get the navbar element
const navbar = document.querySelector('.navbar');

// Initialize variables
let prevScrollpos = window.pageYOffset;

// Add an event listener to the window for scrolling
window.addEventListener('scroll', function() {
  // Get the current scroll position
  const currentScrollPos = window.pageYOffset;

  // Determine the scrolling direction (up or down)
  const isScrollingUp = prevScrollpos > currentScrollPos;
  prevScrollpos = currentScrollPos;

  // Set the transform style based on scrolling direction
  if (isScrollingUp || currentScrollPos === 0) {
    navbar.style.transform = 'translateY(0)';
  } else {
    navbar.style.transform = `translateY(-${navbar.offsetHeight}px)`;
  }
})
</script>
