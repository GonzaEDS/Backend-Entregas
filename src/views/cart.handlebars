<div class='container-bg'>
  <div
    class='d-flex flex-column align-items-center justify-content-center pt-5 pb-5'
  >

    <h1 class='display-5 mb-5 mt-4'>Shopping Cart</h1>

    <div class='col-11 col-sm-10 col-lg-9'>
      {{#if admin}}
        <div>
          <div class='alert alert-primary'>This is an administrator account</div>

        </div>

      {{else if noItems}}
        <table class='table'>
          <thead>
            <tr>
              <th scope='col'>Product</th>
              <th scope='col'>Price</th>
              <th scope='col'>Qty</th>
              <th scope='col'>Total</th>
              <th scope='col' class='delete-col'></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan='5'>
                <div class='alert alert-danger' role='alert'>
                  Your cart is empty
                </div>
              </td>

            </tr>

          </tbody>
        </table>
      {{else}}
        <div class='cart-table' data-cart-id='{{cid}}'>
          <table class='table rounded-2' style='min-height: 30rem;'>
            <thead>
              <tr>
                <th scope='col'>Product</th>
                <th scope='col'>Price</th>
                <th scope='col'>Qty</th>
                <th scope='col'>Total</th>
                <th scope='col'></th>
              </tr>
            </thead>
            <tbody>
              {{#each cartItems}}
                <tr data-product-id='{{this.product._id}}'>
                  <td>
                    <div
                      class='d-flex flex-column align-items-center justify-content-between gap-4'
                    >

                      {{this.product.title}}
                      <img
                        class='cart-product-image'
                        src='{{this.product.thumbnail}}'
                        alt='{{this.prouct.title}} image'
                      />
                    </div>

                  </td>
                  <td>${{this.product.price}}</td>
                  <td>
                    <div class='input-group'>
                      <button
                        class='btn btn-outline-secondary minus-btn'
                        type='button'
                        data-id='{{this.product.id}}'
                      >-</button>
                      <input
                        type='number'
                        class='form-control qty-input text-center'
                        value='{{this.quantity}}'
                        data-id='{{this.product.id}}'
                      />
                      <button
                        class='btn btn-outline-secondary plus-btn'
                        type='button'
                        data-prod-id='{{this.product.id}}'
                      >+</button>
                    </div>
                  </td>
                  <td
                    class='prod-sub-total'
                    data-price='{{this.product.price}}'
                    data-quantity=' {{this.quantity}}'
                  >$<span id='subTotal'></span></td>
                  <td class='delete-col'>
                    <button
                      class='btn btn-outline-dark remove-btn'
                      type='button'
                      data-prod-id='{{this.product._id}}'
                    >
                      <span class='remove-word'>Remove</span>
                      <i class='fa-solid fa-trash-can'></i></button>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class='cart-total'>
          <div class='row total-row'>
            <div class='col-4'>Total:</div>
            <div class='col-4 text-end' id='total-text'>${{total}}</div>
          </div>
          <div class='text-center'>
            <!-- <a href='/checkout' class='btn btn-primary mt-3'>Checkout</a> -->
            <a href='/cart/checkout' class='btn btn-primary mt-3'>Checkout</a>
          </div>
        </div>
      {{/if}}
    </div>

  </div>
</div>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/cart.js'></script>