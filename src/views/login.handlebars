<div class='container p-5'>
  <div class='row justify-content-center mt-5'>
    <div class='col-md-6'>
      <div class='card'>
        <div class='card-header'>Login</div>
        <div class='card-body'>
          <form method='' action=''>
            <div class='mb-3'>
              <label for='email' class='form-label'>Email address</label>
              <input
                type='email'
                class='form-control'
                id='email'
                name='email'
                required
              />
            </div>
            <div class='mb-3'>
              <label for='password' class='form-label'>Password</label>
              <input
                type='password'
                class='form-control'
                id='password'
                name='password'
                required
              />
            </div>
            <div class='mb-2'>Dont have an account?
              <a href='/register'>create one</a></div>
            <div class='d-flex justify-content-between align-items-center me-4'>

              <button
                type='button'
                class='btn btn-primary'
                id='login-btn'
              >Login</button>
              <div class='form-check form-switch'>
                <input
                  class='form-check-input'
                  type='checkbox'
                  role='switch'
                  id='test-user'
                />
                <label class='form-check-label' for='test-user'>Test User</label>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src='/js/login.js'></script>