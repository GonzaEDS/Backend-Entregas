<div class='container-bg'>
  <div
    class='d-flex flex-column align-items-center justify-content-center pt-5 pb-5'
  >

    <h1 class='display-5 mb-5 mt-4'>Checkout</h1>

    <div class='col-11 col-sm-10 col-lg-9'>
      <div class='checkout-table' data-cart-id='{{cid}}'>
        <table class='table rounded-2' style='min-height: 30rem;'>
          <thead>
            <tr>
              <th scope='col'>Product</th>
              <th scope='col'>Price</th>
              <th scope='col'>Qty</th>
              <th scope='col'>Total</th>
            </tr>
          </thead>
          <tbody>
            {{#each cartItems}}
              <tr>
                <td>{{this.product.title}}</td>
                <td>${{this.product.price}}</td>
                <td>{{this.quantity}}</td>
                <td>${{multiply this.product.price this.quantity}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class='checkout-total'>
        <div class='row total-row'>
          <div class='col-4'>Total:</div>
          <div class='col-4 text-end' id='total-text'>${{total}}</div>
        </div>
      </div>

      <form action='ticket' method='get'>
        <div class='mb-3'>
          <label for='name' class='form-label'>Email</label>
          <input
            type='text'
            value='{{this.email}}'
            class='form-control'
            id='name'
            required
          />
        </div>
        <!-- 
        <div class='mb-3'>
          <label for='address' class='form-label'>Shipping Address</label>
          <input type='text' class='form-control' id='address' required />
        </div> -->

        
          <button type='submit' class='btn btn-primary'>Place Order</button>
        </form>
      </form>

    </div>

  </div>
</div>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/checkout.js'></script>