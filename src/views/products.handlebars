<div class='container-bg pt-4'>
  <div class='d-flex flex-column align-items-center justify-content-center'>

    <h1 class='display-5 mb-3 mt-5'>Products</h1>

    <div class='col-11 col-sm-8'>

      {{#if noProducts}}
        <div class='alert alert-danger' role='alert'>
          No se encontraron registros
        </div>
      {{else}}
        <div class='products-filters'>
          <!-- SELECT CATEGORY -->
          <div class='category filter'>
            <label class='form-check-label' for='category-select'>Filter
              category</label>
            <select
              class='form-select form-select-sm border-0 rounded-pill bg-dark text-light'
              id='category-select'
            >
              <option value=''>All Categories</option>
              <option value='computers'>Computers</option>
              <option value='headphones'>Headphones</option>
              <option value='earbuds'>Earbuds</option>
              <option value='watches'>Watches</option>
              <option value='streaming-devices'>Streaming Devices</option>
              <option value='electronics'>Electronics</option>
            </select>
          </div>

          <!-- SELECT SORT PRICE -->
          <div class='sort filter'>
            <label class='form-check-label' for='sort-price-select'>Price order</label>

            <select
              class='form-select form-select-sm border-0 rounded-pill bg-dark text-light'
              id='sort-price-select'
            >
              <option value=''>-</option>
              <option value='asc'>Asc</option>
              <option value='desc'>Desc</option>
            </select>
          </div>

          {{! AVAILABLE }}
          <div class='status filter'>

            <label class='form-check-label' for='available-switch'>Only
              available</label>
            <div class='form-check-custom form-switch-custom dark-switch'>
              <input
                class='form-check-input-custom'
                type='checkbox'
                id='available-switch'
              />
            </div>
          </div>

        </div>
        <!-- PAGINATION -->
        <nav aria-label='Page navigation example'>
          <ul class='pagination justify-content-center'>
            <li class='page-item disabled'>
              <a
                class='page-link'
                href='#'
                tabindex='-1'
                aria-disabled='true'
              >Previous</a>
            </li>
            <li class='page-item active' aria-current='page'>
              <a class='page-link' data-page='1'>1</a>
            </li>
            <li class='page-item'>
              <a class='page-link' data-page='2'>2</a>
            </li>
            <li class='page-item'>
              <a class='page-link' data-page='3'>3</a>
            </li>
            <li class='page-item'>
              <a class='page-link' href='#'>Next</a>
            </li>
          </ul>
        </nav>

        {{! CARDS }}
        <div
          class='cards-matrix row row-cols-1 row-cols-md-3 row-cols-xxl-4 g-5'
        >
          {{#each productsData}}
            <div class='col'>
              <div class='card card-product d-flex flex-column h-100'>
                <div class='card-image'>
                  <img
                    src='{{this.thumbnail}}'
                    class='card-img-top'
                    alt='{{this.title}} icon'
                  />
                </div>

                <div class='card-body flex-fill'>
                  <h5 class='card-title'>{{this.title}}</h5>
                  <p class='card-text'>${{this.price}}</p>
                  <div
                    class='d-flex justify-content-between align-items-center'
                  >
                    <div class='btn-group' data-code='{{this.code}}'>
                      <button
                        type='button'
                        class='btn btn-sm btn-outline-secondary detail-btn'
                      >View</button>
                      <button
                        type='button'
                        class='btn btn-sm btn-outline-secondary'
                      >Add to cart</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>

      {{/if}}
    </div>

  </div>
</div>
<script src='/socket.io/socket.io.js'></script>
<script src='/js/products.js'></script>